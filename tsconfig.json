{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015", "es6", "esnext", "dom"
    ],
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*",
    "./server/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}